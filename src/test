# Generated by Selenium IDE
import unittest
import time
import json
from selenium import webdriver
from selenium.webdriver.common.by import By
from selenium.webdriver.common.action_chains import ActionChains
from selenium.webdriver.support import expected_conditions
from selenium.webdriver.support.wait import WebDriverWait
from selenium.webdriver.common.keys import Keys
from selenium.webdriver.common.desired_capabilities import DesiredCapabilities


class Test03281(unittest.TestCase):
    def setUp(self):
        self.driver = webdriver.Chrome()
        self.vars = {}

    def tearDown(self):
        self.driver.quit()

    def wait_for_window(self, timeout=2):
        time.sleep(round(timeout / 1000))
        wh_now = self.driver.window_handles
        wh_then = self.vars["window_handles"]
        if len(wh_now) > len(wh_then):
            return set(wh_now).difference(set(wh_then)).pop()

    def test_03281(self):
        self.driver.get("https://www.baidu.com/")
        self.driver.set_window_size(762, 691)
        self.driver.find_element(By.ID, "kw").send_keys("喻言")
        self.driver.find_element(By.ID, "su").click()
        time.sleep(10)
        self.vars["window_handles"] = self.driver.window_handles
        self.driver.find_element(By.LINK_TEXT, "喻言_百度百科").click()
        self.vars["win2433"] = self.wait_for_window(2000)
        self.driver.switch_to.window(self.vars["win2433"])
        self.vars["window_handles"] = self.driver.window_handles
        self.driver.find_element(By.LINK_TEXT, "青春有你第二季").click()
        self.vars["win9699"] = self.wait_for_window(2000)
        self.driver.switch_to.window(self.vars["win9699"])
        self.driver.execute_script("window.scrollTo(0,378)")
        self.driver.execute_script("window.scrollTo(0,586)")
        element = self.driver.find_element(By.CSS_SELECTOR, ".wgt-searchbar-simple #search")
        actions = ActionChains(self.driver)
        actions.move_to_element(element).perform()


if __name__ == "__main__":
    unittest.main()


